<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CommunityToolkit.SettingsPage"
             xmlns:local="clr-namespace:CommunityToolkit"
             x:DataType="local:SettingsViewModel"
             Title="Nastavení">

    <VerticalStackLayout Padding="30,0" Spacing="25" VerticalOptions="Center">
        <Label Text="Zadej nové jméno:" HorizontalOptions="Center" />

        <Entry Text="{Binding Username, Mode=TwoWay}" Placeholder="Uživatelské jméno" HorizontalOptions="Center"/>

        <Button Text="Uložit a vrátit se" Command="{Binding SaveCommand}" HorizontalOptions="Center"/>
    </VerticalStackLayout>

</ContentPage>